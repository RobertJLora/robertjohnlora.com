  <script>
    const shuffleBtn = document.getElementById('shuffle-quote');
    const quotes = document.querySelectorAll('.quote-block');

    shuffleBtn?.addEventListener('click', () => {
      // Remove any existing highlight
      document.querySelector('.quote-highlight')?.classList.remove('quote-highlight');

      // Pick random quote
      const randomIndex = Math.floor(Math.random() * quotes.length);
      const randomQuote = quotes[randomIndex];

      // Scroll to it and highlight
      randomQuote.scrollIntoView({ behavior: 'smooth', block: 'center' });
      randomQuote.classList.add('quote-highlight');

      // Remove highlight after animation
      setTimeout(() => randomQuote.classList.remove('quote-highlight'), 2000);
    });
  </script>

  <style>
    .quote-highlight {
      animation: highlight-pulse 2s ease-out;
    }

    @keyframes highlight-pulse {
      0% { background-color: var(--amber-bg); }
      100% { background-color: transparent; }
    }
  </style>

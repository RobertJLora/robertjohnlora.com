---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  image?: string;
  currentSlug?: string;
  isHomepage?: boolean;
  noindex?: boolean;
}

const defaultDescription = "Robert Lora ‚Äì Director of SEO at uSERP. Grew organic traffic 300%+ for B2B SaaS companies like BigCommerce, Cloudbeds, and Form Health.";
const defaultImage = "/og-image.png";

const { title, description, image, currentSlug, isHomepage, noindex } = Astro.props;
const pageDescription = description || defaultDescription;
const pageImage = image || defaultImage;
const siteUrl = "https://robertjohnlora.com";
const fullImageUrl = pageImage.startsWith('http') ? pageImage : `${siteUrl}${pageImage}`;

// Define all notes with their metadata and preview text
const notes = [
  {
    slug: 'about-me',
    title: 'about me',
    emoji: 'üìç',
    pinned: true,
    date: new Date(),
    preview: 'my name is robert. former fraud analyst turned SEO guy. built a travel blog to 2M impressions...'
  },
  {
    slug: 'case-studies',
    title: 'case studies',
    emoji: 'üíº',
    pinned: true,
    date: new Date(),
    preview: 'a few highlights from client work I\'ve led directly. onboard +337% YoY...'
  },
  {
    slug: 'quick-links',
    title: 'quick links',
    emoji: 'üìé',
    pinned: false,
    date: new Date(Date.now() - 86400000),
    preview: 'email, linkedin, github - always happy to connect...'
  },
  {
    slug: 'resources',
    title: 'resources',
    emoji: 'üîñ',
    pinned: false,
    date: new Date(Date.now() - 86400000 * 2),
    preview: 'my information diet for staying current on AI and SEO...'
  },
  {
    slug: 'quotes',
    title: 'quotes',
    emoji: 'üí¨',
    pinned: false,
    date: new Date(Date.now() - 86400000 * 3),
    preview: '"the best time to plant a tree was 20 years ago. the second best time is now."...'
  },
  {
    slug: 'play',
    title: 'play',
    emoji: 'üéØ',
    pinned: false,
    date: new Date(Date.now() - 86400000 * 4),
    preview: 'test your seo intuition - guess which keyword has higher search volume...'
  },
];

const pinnedNotes = notes.filter(n => n.pinned);
const regularNotes = notes.filter(n => !n.pinned);

function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', { month: 'numeric', day: 'numeric', year: 'numeric' });
}
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{title} | Robert Lora</title>
    <meta name="title" content={`${title} | Robert Lora`} />
    <meta name="description" content={pageDescription} />
    <meta name="author" content="Robert Lora" />
    <meta name="robots" content={noindex ? "noindex, follow" : "index, follow"} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={isHomepage ? siteUrl : `${siteUrl}/${currentSlug}`} />
    <meta property="og:title" content={`${title} | Robert Lora`} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:image" content={fullImageUrl} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:site_name" content="Robert Lora" />
    <meta property="og:locale" content="en_US" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={isHomepage ? siteUrl : `${siteUrl}/${currentSlug}`} />
    <meta name="twitter:title" content={`${title} | Robert Lora`} />
    <meta name="twitter:description" content={pageDescription} />
    <meta name="twitter:image" content={fullImageUrl} />

    <!-- Canonical -->
    <link rel="canonical" href={isHomepage ? `${siteUrl}/` : `${siteUrl}/${currentSlug}`} />

    <!-- Prevent flash of wrong theme -->
    <script is:inline>
      (function() {
        const stored = localStorage.getItem('theme');
        const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        const theme = stored || (prefersDark ? 'dark' : 'light');
        if (theme === 'dark') {
          document.documentElement.classList.add('dark');
        }
        // Easter egg for curious devs
        console.log('%chey, you\'re curious. i like that.', 'color: #E8A836; font-size: 14px; font-weight: 500;');
        console.log('%c‚Üí rjlora@gmail.com', 'color: #818181; font-size: 12px;');
      })();
    </script>
  </head>
  <body class="font-sans antialiased" style="background-color: var(--bg-primary); color: var(--text-primary);">
    <!-- Mobile header (visible < md) -->
    <header class="md:hidden fixed top-0 left-0 right-0 z-50 border-b" style="background-color: var(--bg-sidebar); border-color: var(--border-color);">
      <div class="h-11 flex items-center justify-between px-4">
        <button id="menu-toggle" class="p-2 -ml-2" aria-label="Open menu">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
        </button>
        <span class="text-sm font-medium" style="color: var(--text-secondary);">robert lora</span>
        <div class="w-9"></div>
      </div>
    </header>

    <div class="h-dvh flex">
      <!-- Sidebar -->
      <aside id="sidebar" class="fixed md:relative inset-y-0 left-0 w-[320px] -translate-x-full md:translate-x-0 transition-transform duration-300 ease-in-out border-r h-dvh flex flex-col shrink-0 z-40" style="background-color: var(--bg-sidebar); border-color: var(--border-color);">
        <!-- Traffic lights in sidebar header -->
        <div class="h-11 flex items-center pl-6 shrink-0 relative">
          <!-- Close button (mobile only) -->
          <button id="close-menu" class="md:hidden absolute top-2 right-2 p-2" aria-label="Close menu">
            <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </button>
          <div class="flex items-center gap-1.5">
            <div class="w-3 h-3 rounded-full bg-[#EF4444]"></div>
            <div class="w-3 h-3 rounded-full bg-[#EAB308]"></div>
            <div class="w-3 h-3 rounded-full bg-[#22C55E]"></div>
          </div>
        </div>

        <!-- Scrollable sidebar content -->
        <div class="flex-1 overflow-y-auto">
        <!-- Search -->
        <div class="p-3">
          <div class="relative">
            <svg class="absolute left-3 top-1/2 -translate-y-1/2 w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
            <input
              id="search-input"
              type="text"
              placeholder="Search"
              class="w-full pl-9 pr-3 py-1.5 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-amber-400"
              style="background-color: var(--bg-primary); border: 1px solid var(--border-color); color: var(--text-primary);"
            />
          </div>
        </div>

        <!-- Pinned Section -->
        <div class="px-3 py-1">
          <div class="flex items-center gap-1 text-xs mb-2" style="color: var(--text-muted);">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-4 h-4">
              <line x1="12" x2="12" y1="17" y2="22"></line>
              <path d="M5 17h14v-1.76a2 2 0 0 0-1.11-1.79l-1.78-.9A2 2 0 0 1 15 10.76V6h1a2 2 0 0 0 0-4H8a2 2 0 0 0 0 4h1v4.76a2 2 0 0 1-1.11 1.79l-1.78.9A2 2 0 0 0 5 15.24Z"></path>
            </svg>
            <span class="font-semibold">Pinned</span>
          </div>
          <nav class="space-y-0.5">
            {pinnedNotes.map(note => (
              <a
                href={note.slug === 'about-me' ? '/' : `/${note.slug}`}
                class:list={[
                  "sidebar-link block px-2.5 py-2 transition-colors rounded-md",
                  currentSlug === note.slug ? "active-link" : ""
                ]}
                style={currentSlug === note.slug ? "background-color: var(--amber-bg);" : ""}
              >
                <div class="flex items-start gap-2">
                  <span class="text-sm">{note.emoji}</span>
                  <div class="flex-1 min-w-0">
                    <div class="font-semibold text-sm" style="color: var(--text-primary);">{note.title}</div>
                    <div class="text-xs mt-0.5 truncate" style="color: var(--text-muted);">
                      <span>{formatDate(note.date)}</span>
                      <span class="mx-1" style="color: var(--text-muted);">¬∑</span>
                      <span>{note.preview}</span>
                    </div>
                  </div>
                </div>
              </a>
            ))}
          </nav>
        </div>

        <!-- Regular Notes Section -->
        <div class="px-3 py-1">
          <div class="text-xs mb-2 font-semibold" style="color: var(--text-muted);">Notes</div>
          <nav class="space-y-0.5">
            {regularNotes.map(note => (
              <a
                href={`/${note.slug}`}
                class:list={[
                  "sidebar-link block px-2.5 py-2 transition-colors rounded-md",
                  currentSlug === note.slug ? "active-link" : ""
                ]}
                style={currentSlug === note.slug ? "background-color: var(--amber-bg);" : ""}
              >
                <div class="flex items-start gap-2">
                  <span class="text-sm">{note.emoji}</span>
                  <div class="flex-1 min-w-0">
                    <div class="font-semibold text-sm" style="color: var(--text-primary);">{note.title}</div>
                    <div class="text-xs mt-0.5 truncate" style="color: var(--text-muted);">
                      <span>{formatDate(note.date)}</span>
                      <span class="mx-1" style="color: var(--text-muted);">¬∑</span>
                      <span>{note.preview}</span>
                    </div>
                  </div>
                </div>
              </a>
            ))}
          </nav>
        </div>
        </div>

        <!-- Dark mode toggle + local time -->
        <div class="p-3 border-t border-[var(--border-color)] flex items-center justify-between">
          <button
            id="theme-toggle"
            class="w-10 h-10 rounded-lg border border-[var(--border-color)] flex items-center justify-center text-lg transition-all hover:border-[var(--amber-accent)] hover:bg-[var(--amber-bg-subtle)]"
            aria-label="Toggle dark mode"
          >
            <span id="theme-icon">‚òÄÔ∏è</span>
          </button>
          <span id="local-time" class="text-xs" style="color: var(--text-muted);"></span>
        </div>
      </aside>

      <!-- Backdrop (visible when mobile menu open) -->
      <div id="backdrop" class="fixed inset-0 bg-black/20 z-30 hidden md:hidden" aria-hidden="true"></div>

      <!-- Main Content -->
      <main class="flex-1 h-dvh overflow-y-auto pt-11 md:pt-0">
        <div class="p-8">
          <!-- Date at top of content -->
          <div class="flex justify-center mb-4">
            <span class="text-xs text-[#737373]">
              {new Date().toLocaleDateString('en-US', {
                month: 'long',
                day: 'numeric',
                year: 'numeric'
              })} at {new Date().toLocaleTimeString('en-US', {
                hour: 'numeric',
                minute: '2-digit',
                hour12: true
              })}
            </span>
          </div>
          <div class="max-w-[680px]">
            <slot />
          </div>
        </div>
      </main>
    </div>

    <script>
      const menuToggle = document.getElementById('menu-toggle');
      const closeBtn = document.getElementById('close-menu');
      const sidebar = document.getElementById('sidebar');
      const backdrop = document.getElementById('backdrop');

      function openMenu() {
        sidebar?.classList.remove('-translate-x-full');
        backdrop?.classList.remove('hidden');
        document.body.style.overflow = 'hidden';
      }

      function closeMenu() {
        sidebar?.classList.add('-translate-x-full');
        backdrop?.classList.add('hidden');
        document.body.style.overflow = '';
      }

      menuToggle?.addEventListener('click', openMenu);
      closeBtn?.addEventListener('click', closeMenu);
      backdrop?.addEventListener('click', closeMenu);

      // Close on escape key
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') closeMenu();
      });

      // Close when clicking a sidebar link (on mobile)
      sidebar?.querySelectorAll('a').forEach(link => {
        link.addEventListener('click', () => {
          if (window.innerWidth < 768) closeMenu();
        });
      });

      // Search functionality
      const searchInput = document.getElementById('search-input') as HTMLInputElement;
      const sidebarLinks = sidebar?.querySelectorAll('.sidebar-link');

      searchInput?.addEventListener('input', (e) => {
        const query = (e.target as HTMLInputElement).value.toLowerCase().trim();

        sidebarLinks?.forEach(link => {
          const title = link.querySelector('.font-semibold')?.textContent?.toLowerCase() || '';
          const preview = link.querySelector('.truncate')?.textContent?.toLowerCase() || '';
          const matches = query === '' || title.includes(query) || preview.includes(query);

          (link as HTMLElement).style.display = matches ? '' : 'none';
        });
      });

      // Dark mode toggle
      const themeToggle = document.getElementById('theme-toggle');
      const themeIcon = document.getElementById('theme-icon');

      function updateIcon() {
        const isDark = document.documentElement.classList.contains('dark');
        if (themeIcon) themeIcon.textContent = isDark ? 'üåô' : '‚òÄÔ∏è';
      }

      function toggleTheme() {
        const isDark = document.documentElement.classList.toggle('dark');
        localStorage.setItem('theme', isDark ? 'dark' : 'light');
        updateIcon();
      }

      // Initialize icon on load
      updateIcon();

      themeToggle?.addEventListener('click', toggleTheme);

      // Copy to clipboard functionality
      function initCopyLinks() {
        document.querySelectorAll('.copy-email').forEach(link => {
          link.addEventListener('click', async (e) => {
            e.preventDefault();
            const email = (link as HTMLElement).dataset.email || 'rjlora@gmail.com';
            try {
              await navigator.clipboard.writeText(email);
              showToast('copied!');
            } catch {
              // Fallback for older browsers
              const textarea = document.createElement('textarea');
              textarea.value = email;
              document.body.appendChild(textarea);
              textarea.select();
              document.execCommand('copy');
              document.body.removeChild(textarea);
              showToast('copied!');
            }
          });
        });
      }

      function showToast(message: string) {
        const toast = document.getElementById('toast');
        if (toast) {
          toast.textContent = message;
          toast.classList.add('show');
          setTimeout(() => toast.classList.remove('show'), 2000);
        }
      }

      // Initialize copy links on first load
      initCopyLinks();

      // Local time display (M√°laga, Spain)
      function updateLocalTime() {
        const timeEl = document.getElementById('local-time');
        if (timeEl) {
          const time = new Date().toLocaleTimeString('en-US', {
            timeZone: 'Europe/Madrid',
            hour: 'numeric',
            minute: '2-digit',
            hour12: true
          });
          timeEl.textContent = `M√°laga ¬∑ ${time}`;
        }
      }
      updateLocalTime();
      setInterval(updateLocalTime, 60000);
    </script>

    <!-- Toast notification -->
    <div id="toast" class="toast"></div>
  </body>
</html>
